doctype 5
html
  head
    link(href='/css/style.css', rel='stylesheet')
    meta(name='viewport', content='width=320; initial-scale=1.0;')
    script(src='http://code.jquery.com/jquery-1.6.4.min.js')
    script(src='/js/jquery.cookie.js')
    script(src='/socket.io/socket.io.js')   
    script(src='/js/common.js')
    script(src='/js/ui.js')
      
  body
    #chat
      form#login-expand-form
        button#login-expand-btn >
      #loginpanel
        form.wrap#set-botname
          #text Please type in your longish bot name and press enter.
          input#nick
          button Login
          #botnames
          p#login-err Network Error or bot name too short (15 characters or more)          
      #messages        
        textarea#lines
      form#send-message
        input#message
        button Add

      #network

    #buttons
      #email-messages
        button Send Email
      #new-line
        button New Line
      #del-last-line
        button Delete Last Line
      #del-last-word
        button Delete Last Word
      #clear-messages
        button Clear Messages
      #goto-start
        button Go to Beginning
      #undo
        button Undo
      #redo
        button Redo
